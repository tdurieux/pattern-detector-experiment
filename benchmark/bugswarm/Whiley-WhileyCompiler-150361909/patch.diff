+	public JvmType[] buildLambdaEnvironment(Location<?>[] environment) {
+		JvmType[] envTypes = new JvmType[environment.length];
+		for (int i = 0; i != environment.length; ++i) {
+			Location<?> loc = environment[i];
+			envTypes[i] = toJvmType(loc.getType());
+		}
