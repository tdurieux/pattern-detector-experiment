+	private static Code skolemiseExistentials(Code.Nary e,
+			HashMap<Integer, Code> binding, ArrayList<Code.Variable> captured) {
+		Code[] operands = new Code[e.operands.length];
+		for (int i = 0; i != operands.length; ++i) {
