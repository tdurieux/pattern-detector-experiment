+			if(t == WhileyFile.ContentType) {
+				return "whiley";
+			} else if(t == WyilFile.ContentType) {
+				return "wyil";
+			} else if(t == WyalFile.ContentType) {
+				return "wyal";
+			} else if(t == WycsFile.ContentType) {
+				return "wycs";
+			} else {
+				return "dat";
+			}
+		}
+	}
