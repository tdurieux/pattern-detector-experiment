+			// Match one or more types separated by commas
+			ArrayList<SyntacticType> types = new ArrayList<SyntacticType>();
+			types.add(type);
+			do {
+				types.add(parseUnionType(generics));
+			} while (tryAndMatch(true, Comma) != null);
