+		global.minimise();
+		global.compact(0);
+		// FIXME: put this back in!!
+		// global.canonicalise();
+
+		// Second, we write the single global automaton to the output stream.
+		BinaryAutomataWriter writer = new BinaryAutomataWriter(output,
+				Types.SCHEMA);
+		writer.write(global);
+	}
