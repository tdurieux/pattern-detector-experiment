+@name("Is_1")
+reduce Is[Expr e, VoidT]:
+    => False
+
+// Inverting a type test gives a type test
+@name("Is_2")
+reduce Not(Is[Expr e, Type t]):
+    => Is([e,NotT(t)])
+
+// Transitivity of type tests
+@name("Is_3")
