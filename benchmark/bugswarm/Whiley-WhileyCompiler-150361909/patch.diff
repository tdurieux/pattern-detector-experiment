+	private static Path.Entry<?> determineSource(Path.Entry<?> child, Build.Graph graph) {
+		Path.Entry<?> parent = graph.parent(child);
+		while(parent != null) {
+			child = parent;
+			parent = graph.parent(child);
+		}
+		return child;		
+	}
