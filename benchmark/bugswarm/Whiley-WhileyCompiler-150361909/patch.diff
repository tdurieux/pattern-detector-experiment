+ * <pre>
+ * <taskdef name="wyc" classname="wyc.util.AntTask" classpath="lib/wyc.jar"/>
+ * <wyc whileydir="stdlib" includes="whiley\/**\/*.whiley" excludes="whiley/io/**"/>
+ * </pre>
