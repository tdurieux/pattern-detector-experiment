+	public boolean mustParseAsMixedType() {
+		int start = index;
+		if (tryAndMatch(true, Function) != null
+				&& tryAndMatch(true, Identifier) != null) {
+			// Yes, this is a mixed type
+			index = start;
+			return true;
+		} else {
+			// No, this is not a mixed type
+			index = start;
+			return false;
+		}
+	}
