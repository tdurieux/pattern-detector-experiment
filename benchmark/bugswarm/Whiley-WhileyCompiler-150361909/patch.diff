+	/**
+	 * Parse a list type, which is of the form:
+	 *
+	 * <pre>
+	 * ListType ::= '[' Type ']'
+	 * </pre>
+	 *
+	 * @return
+	 */
+	private SyntacticType parseListType(HashSet<String> generics) {
+		int start = index;
+		match(LeftSquare);
+		SyntacticType element = parseType(generics);
+		match(RightSquare);
+		return new SyntacticType.List(element, sourceAttr(start, index - 1));
+	}
