+		for(Declaration d : declarations) {
+			if(d.name().equals(name)) {
+				return d;
+			}
+		}
+		return null;
+	}
+
+	public <T extends Declaration> T declaration(String name, Class<T> type) {
+		for (Declaration d : declarations) {
+			if (d.name().equals(name) && type.isInstance(d)) {
+				return (T) d;
+			}
+		}
+		return null;
+	}
+
+	// =========================================================================
+	// Mutators
+	// =========================================================================
+
