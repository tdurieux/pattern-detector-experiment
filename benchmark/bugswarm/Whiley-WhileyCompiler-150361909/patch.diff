+	protected static String name(String camelCase) {
+		boolean firstTime = true;
+		String r = "";
+		for (int i = 0; i != camelCase.length(); ++i) {
+			char c = camelCase.charAt(i);
+			if (!firstTime && Character.isUpperCase(c)) {
+				r += " ";
+			}
+			firstTime = false;
+			r += Character.toLowerCase(c);
+			;
+		}
+		return r;
+	}
