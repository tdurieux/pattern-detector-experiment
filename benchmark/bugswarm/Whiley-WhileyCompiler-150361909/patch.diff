+	/**
+	 * Parse a bracketed type, which is of the form:
+	 *
+	 * <pre>
+	 * BracketedType ::= '(' Type ')'
+	 * </pre>
+	 *
+	 * @return
+	 */
+	private SyntacticType parseBracketedType(HashSet<String> generics) {
+		int start = index;
+		match(LeftBrace);
+		SyntacticType type = parseType(generics);
+		match(RightBrace);
+		return type;
+	}
