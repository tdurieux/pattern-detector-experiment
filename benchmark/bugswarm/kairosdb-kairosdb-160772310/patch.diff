+	}
+
+	public DataPoint getDataPoint()
+	{
+		return m_dataPoint;
+	}
+
+	public int getTtl()
+	{
+		return m_ttl;
+	}
+
+	@Override
+	public boolean equals(Object o)
+	{
+		if (this == o) return true;
